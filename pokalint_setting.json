{
	"exclude-path-patterns":[
		"/\\.txt$/i"
	],
	"counter":{
		"if":["/(?<!else )if\\b/"],
		"switch":["/\\bswitch\\b/"],
		"for/while":["/\\bfor|while\\b/"],
		"break":["/\\breturn\\b/"],
		"continue":["/\\bcontinue\\b/"],
		"goto":["/\\bgoto\\b/"],
		"return":["/\\breturn\\b/"],
		"#include":["/#include\\b/"],
		"#define":["/#define\\b/"],
		"enum":["/\\benum\\b/"],
		"class":["/\\bclass\\b/"],
		"struct":["/\\bstruct\\b/"],
		"typedef":["/\\btypedef\\b/"],
		"printf":["/\\w*printf\\w*/"],
		"scanf":["/\\w*scanf\\w*/"],
		"malloc":["/\\b\\w*alloc\\w*\\b/i"],
		"free":["/\\b\\w*free\\w*\\b/i"]
	},
	"warning":{
		"Deprecated":[
			{"pattern":"/\\bstrcpy\\b/", "message":"'{0}' is obsolete and you'd better to use 'strcpy_s'."},
			{"pattern":"/\\bstrcmp\\b/", "message":"'{0}' is obsolete and you'd better to use 'strcmp_s'."},
			{"pattern":"/\\bato\\w{1,2}\\b/", "message":"'{0}' is obsolete and you'd better to use 'strtol' etc."},
			{"pattern":"/=\\s*{\\s*0\\s*}/", "message":"You'd better to zero-initialize with '= {}'."}
		],
		"Typo":[
			"convart",
			"fromat",
			"chagne",
			"pallet",
			"serch",
			"chack",
			"cash"
		]
	}
}
