{
	"exclude-path-patterns":[
		"/\\.txt$/i"
	],
	"counter":{
		"if":["/(?<!else )if\\b/"],
		"switch":["/\\bswitch\\b/"],
		"for/while":["/\\bfor|while\\b/"],
		"break":["/\\breturn\\b/"],
		"continue":["/\\bcontinue\\b/"],
		"goto":["/\\bgoto\\b/"],
		"return":["/\\breturn\\b/"],
		"#include":["/#include\\b/"],
		"#define":["/#define\\b/"],
		"enum":["/\\benum\\b/"],
		"class":["/\\bclass\\b/"],
		"struct":["/\\bstruct\\b/"],
		"typedef":["/\\btypedef\\b/"],
		"printf":["/\\w*printf\\w*/"],
		"scanf":["/\\w*scanf\\w*/"],
		"malloc":["/\\b\\w*alloc\\w*\\b/i"],
		"free":["/\\b\\w*free\\w*\\b/i"]
	},
	"warning":{
		"非推奨":[
			{"pattern":"/\\bstrcpy\\b/", "message":"{0} は時代遅れです。strcpy_s の使用を推奨します。"},
			{"pattern":"/\\bstrcmp\\b/", "message":"{0} は時代遅れです。strcmp_s の使用を推奨します。"},
			{"pattern":"/\\bato\\w{1,2}\\b/", "message":"{0} は時代遅れです。strtol とかの使用を推奨します。"},
			{"pattern":"/=\\s*{\\s*0\\s*}/", "message":"配列/構造体のゼロ初期化には = {} の使用を推奨します。"}
		],
		"タイプミス":[
			"convart",
			"fromat",
			"chagne",
			"serch",
			"chack",
			"cash"
		],
		"暫定":[
			"zantei",
			"暫定",
			"とりあえず"
		],
		"デバッグ用":[
			"@test",
			"@debug"
		],
		"Todo":[
			"/\\btodo\\b/i"
		],
		"全角空白":[
			"　"
		]
	}
}
